<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.palmdigital.buttonclicks_v01.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Enter first name:"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="14sp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_first"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:text="Get Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="getName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_results" />

    <Button
        android:text="Get Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button02"
        android:onClick="getLastName"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
    android:text="Get Pet Name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/button03"
    android:onClick="getPetName"/>
</LinearLayout>
